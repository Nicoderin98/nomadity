<div class="card-experience mt-3 mb-3" data-id="<% experience.id %>" id="experience-<%= experience.id %>">
  <div class="favorite-button">
    <%= render 'shared/favorite_button', experience: experience %>
  </div>
  <% if experience.photos.attached? %>
    <%= cl_image_tag experience.photos.sample.key, crop: :fill %>
  <% end %>
  <div class="card-experience-infos">
    <h2><%= experience.name %></h2>
    <p><%= experience.address %></p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#experience<%= experience.id %>">
  Show
</button>
  </div>
</div>
