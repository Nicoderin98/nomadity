<div class="profile-container">
<br>
<div class="progress">
  <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%">75%</div>
</div>
<br>
  <div class=" d-flex  justify-content-between m-6">
   <div class="col-2">
    <%= render "shared/profile_sidebar" %>
   </div>
   <br>
   <div class="col-5 m-3">
      <div class="d-flex">
        <h2>Favorited in : <%= link_to "Lisbon" , { :controller => "pages", :action => 'profile' , :query => "lisbon"} , class: "btn btn-primary" %>
        <%= link_to "Porto", {:controller => "pages", :action => 'profile', :query => "porto"}, class: "btn btn-primary" %> </h2>
      </div>
      <div data-controller="drag">
        <% @all_favorites.each do |favorite| %>
          <%= render 'shared/experience_card', experience: favorite %>
          <%= render 'shared/show_modal', experience: favorite %>
        <% end %>
      </div>
   </div>
      <div class="col-5 m-3">
        <%= render "shared/mapbox" %>
      </div>
  </div>
</div>
