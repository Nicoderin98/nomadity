<div class="container">
<br>
  <div class="row">
    <div class="col-6">
      <%= render "shared/mapbox" %>
    </div>
    <div class="col-6 scroll">
      <div class="scrollmenu">
        <% @categories.each do |category| %>
          <%= link_to "#{category.name}", experiences_path(category: category.ref, city: params[:city]) %>
        <% end %>
      </div>
      <br>
      <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%">50%</div>
      </div>
      <br>
      <div>
        <% @experiences.each do |experience| %>
          <%= render 'shared/experience_card', experience: experience %>
          <%= render 'shared/show_modal', experience: experience %>
        <% end %>
      </div>
    </div>
      <%#= link_to "Home", root_path, class: "btn btn-primary" %>
  </div>
</div>
