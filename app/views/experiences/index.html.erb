<div class="container">
<br>
  <div class="row">
      <div class="scrollmenu">
        <% @categories.each do |category| %>
          <%= link_to "#{category.name}", experiences_path(category: category.ref, city: params[:city]) %>
        <% end %>
      </div>
    <div class="col-6 mt-3">
      <%= render "shared/mapbox" %>
    </div>
    <div class="col-6 scroll">
      <p class="index-title-results-page">Select your Route</p>
      <p class="paragraph">You selected 3/4 places for your new route</p>
        <div class="value">
          <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%"></div>
          </div>
            <p class="progress-value">50%</p>
        </div>
      <br>
      <div>
        <% @experiences.each do |experience| %>
        <div class = "d-flex align-items-center justify-content-around">
          <%= render 'shared/experience_card', experience: experience %>
          <button type="button" class="btn btn-routes">
            <i class="fas fa-check"></i>
          </button>
        </div>
          <%= render 'shared/show_modal', experience: experience %>
        <% end %>
      </div>
    </div>
      <%#= link_to "Home", root_path, class: "btn btn-primary" %>
  </div>
</div>
